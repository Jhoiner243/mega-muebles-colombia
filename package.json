{
  "name": "@mega-muebles-ecommerce/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "nx run-many -t serve -p backend frontend admin --parallel=3",
    "dev:all": "pnpm run docker:up && pnpm run dev",
    "dev:backend": "nx run backend:serve",
    "dev:frontend": "nx run frontend:dev",
    "docker:up": "cd apps/backend && docker-compose up -d",
    "docker:down": "cd apps/backend && docker-compose down",
    "docker:restart": "pnpm run docker:down && pnpm run docker:up",
    "docker:logs": "cd apps/backend && docker-compose logs -f",
    "build": "nx run-many -t build -p backend frontend",
    "build:backend": "nx run backend:build",
    "build:frontend": "nx run frontend:build",
    "build:prod": "nx run-many -t build -p backend frontend --configuration=production",
    "test": "nx run-many -t test -p backend frontend",
    "test:backend": "nx run backend:test",
    "test:frontend": "nx run frontend:test",
    "test:watch": "nx run-many -t test -p backend frontend --watch",
    "test:e2e": "nx run-many -t e2e",
    "lint": "nx run-many -t lint -p backend frontend",
    "lint:fix": "nx run-many -t lint -p backend frontend --fix",
    "lint:backend": "nx run backend:lint",
    "lint:frontend": "nx run frontend:lint",
    "typecheck": "nx run-many -t typecheck -p backend frontend",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "nx reset && rimraf dist node_modules apps/*/node_modules apps/*/dist",
    "clean:cache": "nx reset",
    "reset": "pnpm run clean && pnpm install",
    "start:backend": "node dist/apps/backend/main.js",
    "start:frontend": "nx run frontend:start"
  },
  "private": true,
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/devkit": "22.1.3",
    "@nx/eslint": "22.1.3",
    "@nx/eslint-plugin": "22.1.3",
    "@nx/jest": "22.1.3",
    "@nx/js": "22.1.3",
    "@nx/nest": "^22.1.3",
    "@nx/next": "^22.1.3",
    "@nx/node": "22.1.3",
    "@nx/playwright": "22.1.3",
    "@nx/web": "22.1.3",
    "@nx/webpack": "22.1.3",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.38",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-util": "^30.0.2",
    "nx": "22.1.3",
    "prettier": "^2.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "axios": "^1.6.0",
    "next": "~16.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0"
  }
}
